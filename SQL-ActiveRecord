Return 3rd highest salary
# SQL
# select distinct salaries.amount from salaries order by salaries.amount desc offset 2 limit 1

# ActiveRecord
# Employee.distinct.order(salary: :desc).offset(2).limit(1).pluck(:salary).first


Return top 1 highest point
# SQL
# select points.number from points order by points.number desc limit 1

#ActiverRecord
# Point.order(number: :desc).limit(1).pluck(:number).first


Return second highest point along with username
# users
# has_many :points

# points
# belongs_to :user

# SQL
# select users.name p.number from users 
# join points p on user.id = p.user_id 
# order by p.number desc 
# offset 1 limit 2

# ActiveRecord
# User.join(:points).select(user.name, point.number).order(points: :desc).limit(1).offset(1)

